<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="one_hand_maze_solver">
    <Fallback>
      <ForceFailure>
        <PublishToGui topic_name="step"/>
      </ForceFailure>
      <IsGoal/>
      <IsLoopState/>
      <Sequence>
        <RecordPose/>
        <Fallback>
          <IsWallHandWayOpen wall_hand="left"/>
          <Fallback>
            <IsFrontOpen/>
            <Fallback>
              <IsOtherHandOpen/>
              <IsBackOpen/>
            </Fallback>
          </Fallback>
        </Fallback>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="IsBackOpen"
            editable="true"/>
    <Action ID="IsFrontOpen"
            editable="true"/>
    <Action ID="IsGoal"
            editable="true"/>
    <Condition ID="IsLoopState"
               editable="true"/>
    <Action ID="IsOtherHandOpen"
            editable="true"/>
    <Action ID="IsWallHandWayOpen"
            editable="true">
      <input_port name="wall_hand"/>
    </Action>
    <Action ID="PublishToGui"
            editable="true">
      <input_port name="topic_name"/>
    </Action>
    <Action ID="RecordPose"
            editable="true"/>
  </TreeNodesModel>

</root>
